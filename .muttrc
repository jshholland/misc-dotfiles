source ~/solarized/mutt-colors-solarized/mutt-colors-solarized-dark-16.muttrc

# things I don't want to go on Github
source ~/.muttrc.local

set record="=INBOX.Sent"
set postponed="=INBOX.Drafts"
set trash="=INBOX.Trash"
set imap_check_subscribed
set mail_check=60
set header_cache=~/.hcache
set net_inc=5

source ~/.mail_aliases
set alias_file=~/.mail_aliases

bind index J sidebar-next
bind index K sidebar-prev
bind index F sidebar-open
bind index G imap-fetch-mail

save-hook . =INBOX.Archives.%<%Y>
